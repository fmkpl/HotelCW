<Window x:Class="HotelCW.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelCW"
        mc:Ignorable="d"
        Title="HotelCW" 
        Height="600"
        MinHeight="600"
        MaxHeight="800"
        Width="550" 
        MinWidth="550"
        MaxWidth="800"
        Background="#05668D">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <ContentControl Content="{Binding SelectedViewModel}"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="10" Width="200" Content="User" Command="{Binding UpdateViewComand}" CommandParameter="User"/>
            <Button Margin="10" Width="200" Content="Admin" Command="{Binding UpdateViewComand}" CommandParameter="Admin"/>
        </StackPanel>
    </Grid>
</Window>
